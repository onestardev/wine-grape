<% provide(:body_class, "place-page") %>
<!--Start of banner section-->
<section class="main-banner-section">
    <div class="container-fluid no-padding">
        <div class="banner-container">
            <div class="container">
                <div class="row">
                    <div class="text-container">
                        <h1>
                            <div class="category-title col-xs-12 col-sm-12 col-lg-12">
                                <span class="number"><%= @no %> <span class="separator"></span></span>
                                <span class="category-name"><%= @blog.title %></span>
                            </div>
                            <div class="location-wrapper col-xs-12 col-sm-12 col-lg-12">
                                <span class="location-container"><span class="location-icon"></span> </span>
                                <div class="share-container col-md-2 hidden-md hidden-lg  no-padding">
                                </div>
                            </div>
                        </h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--end of banner section-->
<div class="social-modal">
    <div class="container">
      <h1>Share</h1>
        <span class="glyphicon glyphicon-remove-circle"></span>
    </div>
</div> 
<!--Start of main info container-->
<section class="main-info-container">
    <div class="container">
        <div class="row">
        	<div class="blog-title">
                <h1 class="text-left"><%= @blog.title %></h1>
            </div>
            
            <div class="col-md-10 map-container">
                <span>
                    <%= link_to image_tag( @blog.pic, class: 'img-responsive' )%>
                </span>
            </div>
            <div class="col-md-12 text-container">
              <div class="grape-long_description">
                <span>
                   <%= @blog.des %>
                </span>
              </div>
              
            </div>
        </div>
    </div>
</section>
<!--end of main info container -->

