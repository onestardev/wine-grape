<p id="notice"><%= notice %></p>

<h1>Grapes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Date</th>
      <th>Pic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grapes.each do |grape| %>
      <tr>
        <td><%= grape.name %></td>
        <td><%= grape.content %></td>
        <td><%= grape.date %></td>
        <td><%= grape.pic %></td>
        <td><%= link_to 'Show', grape %></td>
        <td><%= link_to 'Edit', edit_grape_path(grape) %></td>
        <td><%= link_to 'Destroy', grape, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Grape', new_grape_path %>
