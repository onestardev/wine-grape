<% provide(:body_class, "ranking-page") %>
<!--Start of Banner section-->
<section class="main-banner-section">
    <div class="container-fluid no-padding">
        <div class="banner-container banner-container-wine">
            <div class="container">
                <div class="row">
                    <div class="category-title col-xs-12 col-sm-12 col-lg-12">
                        <span class="separator">Top Wine|</span>
                        <span class="date-container "> <%= DateTime.now.strftime "%B %Y" %></span>
                    </div>
                    <h1 class="places-container col-xs-12 col-sm-12 col-lg-12">Wine</h1>
                </div>
            </div>
        </div>
    </div>
</section>
<!--End of Banner section-->

<!--Start of places list section-->
<section class="places-list-section">
    <% @wines.each_with_index do |wine, index| %>
    <div class="social-modal">
        <div class="container">
          <h1>Share</h1>
          <%= social_share_button_tag(wine.name, :image => asset_path("images-places-#{index+1}.png")) %>
          <span class="glyphicon glyphicon-remove-circle"></span>
      </div>                          
  </div>
  <!--Start of place cont-->
  <div class="container-fluid no-padding">
    <div class="place-container container">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-4 image-container no-padding hidden-sm hidden-xs">
                  <a href="<%= wines_path%>">
                      <img src="uploads/<%= wine.pic%>" class="img-responsive">
                  </a>
              </div>
              <div class="col-md-8 col-sm-12 col-xs-12 info-container">
                <div class="header-section">
                    <div class="number-container"><%= index+1 %></div>
                    <div class="separator"></div>
                    <div class="name-container">
                        <div class="title-container"><%= set_title wine.name %></div>
                    </div>
                </div>
                <div class="image-for-mobile hidden-lg hidden-md">
                    <%= image_tag "images-places-#{index+1}.png", class: 'img-responsive' %>
                </div>
                <div class="main-text-container">
                    <p>
                      <%= wine.short_des %>
                  </p>
              </div>
              <div class="wine-long_description">
                <span>
                    <%= wine.long_des %>
                </span>
            </div>
            <div class="wine-region">
               <strong class="text-info" >Regions:</strong><span style="margin-left: 14px">
                <% unless wine.regions == nil %>
                <% wine.regions.split(',').each do |element| %>
                <a href="#">
                  <span class="regions-element"><%=  element %></span>
                  <% end %>
              </span>
                </a>
            <% end %>
            </div>
              <div class="wine-supplyer">
                 <strong class="text-info">Supplyer:</strong>
                 <span style="margin-left: 14px">
                    <% unless wine.supply == nil %>
                    <% wine.supply.split(',').each_with_index do |element,index| %>
                    <a href="<%= wine.supply_url.split(',').fetch(index) %>">
                      <span class="regions-element"><%=  element %></span>
                      <% end %>
                    </span>
                    </a>
                    <% end %>
                </span>
            </div>

</div>
</div>
</div>
</div>
</div>
<!--end of place container-->                          
<% end %>    
</section>
<section class="place-slider-section">
  <div class="container">
    <div class="row">
      <div class="col-md-12 b_slider_wrapper">
        <h1>Related wines</h1>
        <div class="b_slider">
          <%= image_tag 'Aglianico_del_Vulture_new.jpg', class: 'b_slider__slide img-responsive' %>
          <%= image_tag 'Albarola_new.jpg', class: 'b_slider__slide img-responsive' %>
          <%= image_tag 'Avana_new.jpg', class: 'b_slider__slide img-responsive' %>
          <%= image_tag 'Avana_new.jpg', class: 'b_slider__slide img-responsive' %>
          <%= image_tag 'Avana_new.jpg', class: 'b_slider__slide img-responsive' %>
          <%= image_tag 'Avana_new.jpg', class: 'b_slider__slide img-responsive' %>
          <%= image_tag 'Avana_new.jpg', class: 'b_slider__slide img-responsive' %>
        </div>
      </div>
    </div>
  </div>
</section>