<p id="notice"><%= notice %></p>

<h1>Wines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Short des</th>
      <th>Long des</th>
      <th>Pic</th>
      <th>Regions</th>
      <th>Wine</th>
      <th>Publish</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.name %></td>
        <td><%= wine.short_des %></td>
        <td><%= wine.long_des %></td>
        <td><%= wine.pic %></td>
        <td><%= wine.regions %></td>
        <td><%= wine.wine %></td>
        <td><%= wine.publish %></td>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

